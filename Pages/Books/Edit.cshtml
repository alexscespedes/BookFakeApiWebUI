@page
@model BookFakeApiWebUI.Pages.Books.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Description" class="control-label"></label>
                <input asp-for="Book.Description" class="form-control" />
                <span asp-validation-for="Book.Description" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Book.PageCount" class="control-label"></label>
                <input asp-for="Book.PageCount" class="form-control" />
                <span asp-validation-for="Book.PageCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Book.Excerpt" class="control-label"></label>
                <input asp-for="Book.Excerpt" class="form-control" />
                <span asp-validation-for="Book.Excerpt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Book.PublishDate" class="control-label"></label>
                <input asp-for="Book.PublishDate" class="form-control" />
                <span asp-validation-for="Book.PublishDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>